@using Microsoft.AspNetCore.Identity
@using OITAppRoles.Models

@inject SignInManager<OITApplicationUser> SignInManager
@inject UserManager<OITApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="OITAccount" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="OITManage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="OITAccount" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="OITAccount" asp-action="Login">Log in</a></li>
    </ul>
}
